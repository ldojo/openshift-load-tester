pipeline {
  agent {
    node {
      label 'maven'
    }
  }
  options {
    timeout(time: 20, unit: 'MINUTES')
  }
  stages {
    stage('preamble') {
        steps {
            script {
                openshift.withCluster() {
                    openshift.withProject() {
                        echo "Using project: ${openshift.project()}"
                    }
                }
            }
        }
    }

    stage ('load-test'){
      steps {
        dir("single-pod-strategy"){
          sh 'mvn gatling:test'
        }

      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: 'target/gatling/', fingerprint: true
    }
  }
}
